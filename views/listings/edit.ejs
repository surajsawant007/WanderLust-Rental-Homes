<% layout('/layouts/boilerplate') -%>
<body>
  <div class="row mt-3">
    <div class="suraj-col-custom col-11">
      <h2>Edit Your Listing:</h2>
      <form method="post" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
          <strong><label for="title" class="form-label">Title</label></strong>
          <input class="form-control" type="text" name="listing[title]" required placeholder="enter title" value="<%= listing.title %>"></input>
          <div class="invalid-feedback">please enter valid title!</div>
          <div class="valid-feedback">Title Looks Good!</div>
        </div> 
        <div class="mb-3">
          <strong><label for="description" class="form-label">Description</label></strong>
          <textarea type="text" class="form-control" required name="listing[description]"><%= listing.description %></textarea>
          <div class="valid-feedback">Description looks good and short!</div>
          <div class="invalid-feedback">Please write short description!</div>
        </div>


        <div class="mb-3">
          <strong><label>Original Listing URL</label><br></strong>
          <img src="<%= originalImageUrl %>" alt="Original Listing Image" class="original-img">
        </div>


        <div class="mb-3">
          <strong><label for="image" class="form-label">Upload New Image</label></strong>
          <input type="file" class="form-control" name="listing[image]"></input>
        </div>


        
        <div class="row">
          <div class="mb-3 col-md-4">
            <strong><label for="price" class="form-label">Price</label></strong> 
            <input type="number" value="<%= listing.price %>" required class="form-control" name="listing[price]" placeholder="1200"></input>
            <div class="invalid-feedback">please enter valid price!</div>
          </div>
          <div class="mb-3 col-md-4">
            <strong><label for="country" class="form-label">Country</label></strong>
            <input type="text" value="<%= listing.country %>" required class="form-control" name="listing[country]" placeholder="india"></input>
            <div class="invalid-feedback">please enter valid country!</div>
          </div>
        </div>

        <% for(categ of listing.category){ %>
          <p>pre category:<%= categ %>&nbsp;&nbsp;</p>
          <% } %>
          <div class="mb-3">
            <label for="category" class="form-label">Select Category</label>
    
            <select
              id="category"
              name="listing[category]"
              class="form-select border border-black border-opacity-50 mb-2"
              multiple
              style="font-size: 0.95rem"
            >
              <option value="Beachfront">Beachfront</option>
              <option value="Cabins">Cabins</option>
              <option value="Omg">OMG</option>
              <option value="Lake">Lake</option>
              <option value="Design">Design</option>
              <option value="Amazing Pools">Amazing pools</option>
              <option value="Farms">Farms</option>
              <option value="Amazing Views">Amazing views</option>
              <option value="Rooms">Rooms</option>
              <option value="Lakefront">Lakefront</option>
              <option value="Tiny Homes">Tiny homes</option>
              <option value="Countryside">Countryside</option>
              <option value="Treehouse">Treehouse</option>
              <option value="Tropical">Tropical</option>
              <option value="National Parks">National parks</option>
              <option value="Casties">Castles</option>
              <option value="Camping">Camping</option>
              <option value="Top Of The World">Top of the world</option>
              <option value="Luxe">Luxury</option>
              <option value="Iconic Cities">Iconic cities</option>
              <option value="Earth Homes">Earth homes</option>
            </select>
          </div>
        
        
        <div class="mb-3">
          <strong><label for="location" class="form-label">Location</label></strong>
          <input type="text" value="<%= listing.location %>" required class="form-control" name="listing[location]" placeholder="jaipur, rajasthan"></input>
          <div class="invalid-feedback">please enter valid location!</div>
        </div>
        <button class="edit-btn btn btn-outline-warning mt-3 mb-3">Edit</button>
      </form>
    </div>
  </div>
</body>